<% if logged_in? %>
 <div class="row">
    <aside class="col-md-4">
      <%= form_for(@tasks) do |f| %>
 </div>     
    <div class="form-group">
      <%= f.text_area :content, class: 'form-control', rows: 5 %>
     </div>
        <% f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <%end %>
    </aside>
    <div class="col-xs-8">
      <%#= render 'tasks/tasks', tasks: @tasks %>
   </div>
  
  <% if @tasks.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>タイトル</th>
          <th>メッセージ</th>
        </tr>
      </thead>
      <tbody>
         <% @tasks.each do |task| %>
          <tr>
            <td><%#= link_to task.id, task %></td>
            <td><%= task.status %></td>
            <td><%= task.content %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= paginate @tasks %>
    </div>
      <%= link_to '新規タスクの投稿', new_user_path, class: "btn btn-primary" %>
　    <%= link_to 'このメッセージを編集する', edit_task_path(@task), class: 'btn btn-default' %>
      <% end %>
      <% else %>
    <div class="center jumbotron">
 </div>
  <div class="text-center">
      <h1>Welcome to the tasks</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
  </div>
<% end %>

